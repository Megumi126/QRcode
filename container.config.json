{
	// 本配置文件仅配合模板部署使用，为模板部署的服务生成「服务设置」的初始值。
	// 模板部署结束后，后续服务发布与本配置文件完全无关，修改「服务设置」请到控制台操作。
	// 复制模板代码自行开发请忽略本配置文件。
	
	"containerPort": 80,                          
	"minNum": 0,                                    
	"maxNum": 5,                                
	"cpu": 1,                               
	"mem": 2,                           
	"policyType": "cpu",                       
	"policyThreshold": 60,   
	"policyDetails": [
		{
			"PolicyType": "cpu",
			"PolicyThreshold": 60
		},
		{
			"PolicyType": "mem",
			"PolicyThreshold": 60
		}
	],
	"envParams": {},         
	"customLogs": "stdout",              
	"initialDelaySeconds": 2,                  
	"dataBaseName":"antifake_db",
	"executeSQLs":[
		"CREATE DATABASE IF NOT EXISTS antifake_db;",
		"USE antifake_db;",
		"CREATE TABLE IF NOT EXISTS `antifake_codes` (`id` bigint unsigned NOT NULL AUTO_INCREMENT, `code` char(16) NOT NULL, `is_test` tinyint(1) NOT NULL DEFAULT 0, `created_at` datetime(6) NOT NULL, `scan_count` bigint unsigned NOT NULL DEFAULT 0, `last_scan_time` datetime(6) NULL, `last_scan_ip` varchar(45) NULL, PRIMARY KEY (`id`), UNIQUE KEY `uk_code` (`code`), KEY `idx_last_scan_time` (`last_scan_time`), KEY `idx_is_test` (`is_test`)) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;",
		"CREATE TABLE IF NOT EXISTS `antifake_scan_logs` (`id` bigint unsigned NOT NULL AUTO_INCREMENT, `code` char(16) NOT NULL, `server_ip` varchar(45) NOT NULL, `client_ip` varchar(45) NULL, `server_time` datetime(6) NOT NULL, `client_scan_time` datetime(6) NULL, `status` enum('first','repeat','error') NOT NULL, `is_test` tinyint(1) NOT NULL DEFAULT 0, `duration_ms` int unsigned NOT NULL, `suspicious` tinyint(1) NOT NULL DEFAULT 0, PRIMARY KEY (`id`), KEY `idx_code_time` (`code`, `server_time`), KEY `idx_status` (`status`)) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;"
	]    
}
